# Tourism Recommender System Environment Variables

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-secret-key-here-change-in-production

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000

# Weather API (Optional - for real weather data)
# Get your API key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your-openweather-api-key-here

# Model Configuration
MODEL_PATH=models/
DATA_PATH=dataset/

# Cache Configuration
CACHE_TTL_SECONDS=3600
MAX_CACHE_SIZE=100

# Logging
LOG_LEVEL=INFO
